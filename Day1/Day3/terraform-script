# aws provider configuration

terraform {
  required_providers {
    aws = {
      source  = "hashicorp/aws"
      version = "~> 6.0"
    }
  }
}

# Configure the AWS Provider
provider "aws" {
  region = "sa-east-1"   # replace with ur region 
}


# aws ec2 instance provisoning

resource "aws_instance" "web" {
  ami           = "ami-0a174b8e659123575"    # replace with ur ami id
  instance_type = "t2.small"                 # choose instance type

  tags = {
    Name = "murali-vm"                       # instacne name
  }
}
